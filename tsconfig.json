{
    "compilerOptions": {
        "outDir": "./dist/",
        "noEmit": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "allowJs": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@tests/*": [
                "tests/*"
            ]
        }
    },
    "include": [
        "src",
        "tests",
        "**.js",
        "**.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
